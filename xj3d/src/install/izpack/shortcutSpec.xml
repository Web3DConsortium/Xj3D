<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

    <skipIfNotSupported/>
    
    <programGroup defaultName="Extensible 3D Graphics\Xj3D\Xj3D Browser"
                  location="applications"/>
    <shortcut
        name="Xj3D Browser"
        target="$INSTALL_PATH\browser.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH"
        description="Xj3D Graphics Browser"
        iconFile="$INSTALL_PATH\xj3d.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="yes"
        startMenu="no"
        startup="no">

        <createForPack name="Base"/>
    </shortcut>

    <shortcut
        name="Xj3D Converter"
        target="$INSTALL_PATH\converter.bat"
        commandLine=""
        workingDirectory="$INSTALL_PATH"
        description="Xj3D Converter"
        iconFile="$INSTALL_PATH\Xj3D-Convert.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
        desktop="no"
        applications="yes"
        startMenu="no"
        startup="no">

        <createForPack name="Base"/>
    </shortcut>
    
    <shortcut
            name="Xj3D Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="yes"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
            commandLine=""
            iconFile="$INSTALL_PATH\icons\izpack_uninstall_32.png"
            description="This uninstalls Xj3D ${project.version}">

        <createForPack name="Base"/>
    </shortcut>

</izpack:shortcuts>